FoamFile
{

    version     1.0;
    format      ascii;
    class       dictionary;
    object      surfaceFeaturesDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

  sphere
  {
      surfaces
      (
        "sphere.stl"
      );

      includedAngle       150;

      subsetFeatures
      {
          nonManifoldEdges    yes;
          openEdges           yes;
      }

      writeObj                no;
  }

